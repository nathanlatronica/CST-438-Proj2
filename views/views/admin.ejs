<!DOCTYPE html>
<html>
    <head>
        <title> Admin</title>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <link href= "/public/assets/styles.css" rel="stylesheet" type="text/css" />

    </head>
    <body>
        
        <script>
            $(document).ready( function() {
                $(".removeAuthor").on("click", function(event) {
                    if(confirm("Delete Author?") == false) {
                        event.preventDefault();
                    }
                })
            })
        </script>
        
        <h1> Admin Section </h1>

        <form action="/">
            <button id="logOut">Log Out</button>
        </form>
        
        <form action="/addAuthor">
          <button> Add New Author </button> 
        </form>
        
        <h3>Authors</h3>
        
        <% authorList.forEach(function(author){  %>
        
        
            [<a href="/updateAuthor?authorId=<%= author.authorId %>">UPDATE</a>] 
            [<a class="removeAuthor" href="/deleteAuthor?authorId=<%= author.authorId %>">DELETE</a>] 
            
            <%= author.firstName %> <%= author.lastName %> <br>
        
        
        <% }) %>
        
    </body>
</html>